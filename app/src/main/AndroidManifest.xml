<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walky">

    <!-- Health Connect provider 가시성 -->
    <queries>
        <package android:name="com.google.android.apps.healthdata" />
    </queries>

    <!-- 권한들 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Health Connect는 런타임 권한으로 처리되지만, READ_STEPS 선언은 문제 없음 -->
    <uses-permission android:name="android.permission.health.READ_STEPS" />
    <!-- 앱이 완전 백그라운드에서도 위치 추적할 때만 필요 -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- API 34+ 권장 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <!-- Android 13+ 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".WalkyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="WalkMate"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Walky">

        <!-- Kakao SDK -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_native_app_key" />
        <meta-data
            android:name="com.kakao.maps.openapi.key"
            android:value="@string/kakao_map_key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Kakao 로그인 콜백 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="kakaof48b259c549aaaeb15b7a1f99d2e90a6"
                    android:host="oauth" />
            </intent-filter>
        </activity>

        <!-- 메인 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Walky">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 포어그라운드 서비스 (패키지 경로 확인: .walk.WalkTrackingService 가 맞는지) -->
        <service
            android:name=".walk.WalkTrackingService"
            android:exported="false"
            android:foregroundServiceType="location" />
    </application>

</manifest>
